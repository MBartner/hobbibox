<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/box_with_us_relative_layout">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_business_info_page_rel_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <TextView
        android:id="@+id/profile_business_profile_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_business_profile"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/profile_create_box_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_create_box"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@color/createBox"
        android:layout_below="@id/profile_business_profile_title_textview"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/profile_get_verified_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_get_verified"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@color/getVerified"
        android:layout_below="@id/profile_business_profile_title_textview"
        android:layout_marginBottom="10dp"
        android:visibility="visible"/>


    <RelativeLayout
        android:id="@+id/profile_business_info_edit_rel_layout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/profile_business_info_edit_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_green_24dp"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>