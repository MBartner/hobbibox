<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hobbibox.hobbibox">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/main_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan">

        </activity>

        <activity android:name=".pages.profile.PhoneNumberActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">

        </activity>

        <activity android:name=".pages.profile.BillingActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">

        </activity>

        <activity android:name=".pages.profile.BoxWithUsActivity">

        </activity>

        <activity android:name=".pages.profile.PaymentActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">

        </activity>

        <activity android:name=".pages.profile.ShippingActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">

        </activity>

        <activity android:name=".pages.profile.SubscriptionsActivity">

        </activity>

        <activity android:name=".pages.profile.CreateBoxActivity"
            android:windowSoftInputMode="adjustPan">

        </activity>

        <activity android:name=".pages.profile.VerifyActivity"
            android:windowSoftInputMode="adjustPan">

        </activity>

        <activity android:name=".login.SignInActivity">

        </activity>

        <activity android:name=".login.RegisterActivity">

        </activity>

        <activity android:name=".login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>